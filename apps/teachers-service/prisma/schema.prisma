generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum Race {
  WHITE
  BLACK
  BROWN
  YELLOW
  INDIGENOUS
}

enum SpecialCategories {
  INDIGENOUS
  RIVERSIDECOMUNITIES
  BLACKPOPULATION
  QUILOMBOLA
  PCD
  OTHERTRADITIONALCOMMUNITIES
}

enum LevelOfEducation {
  EF9
  EM1
  EM2
  EM3
}

model Teacher {
  id                String              @id
  name              String
  email             String              @unique
  cpf               String              @unique
  phone             String?             @unique
  birthDate         DateTime
  gender            Gender
  colorRace         Race
  specialCategories SpecialCategories[] @default([])
  schoolsId         String[]
  teamsId           String[]            @default([])
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
}
